<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <VerbScript.VerbScriptDef>
    <defName>VSC_SimpleTest_AA</defName>
	<verbData>
		<potential>
			<and>
				<isGender>Male</isGender>
				<not><hasHediff>Dementia</hasHediff></not>
			</and>
		</potential>
		<fire>
			<spawndef>
				<spawnPosition><aimtarget/></spawnPosition>
				<spawnDef>Wall</spawnDef>
				<stuffDef>WoodLog</stuffDef>
			</spawndef>
			<spawndef>
				<spawnPosition>
					<add>
						<aimtarget/>
						<vector3>(0,0,2)</vector3>
					</add>
				</spawnPosition>
				<spawnDef>Wall</spawnDef>
				<stuffDef>WoodLog</stuffDef>
			</spawndef>
			<spawndef>
				<spawnPosition>
					<add>
						<aimtarget/>
						<vector3>(0,0,-2)</vector3>
					</add>
				</spawnPosition>
				<spawnDef>Wall</spawnDef>
				<stuffDef>WoodLog</stuffDef>
			</spawndef>
			<spawndef>
				<spawnPosition>
					<add>
						<aimtarget/>
						<vector3>(2,0,0)</vector3>
					</add>
				</spawnPosition>
				<spawnDef>Wall</spawnDef>
				<stuffDef>WoodLog</stuffDef>
			</spawndef>
			<spawndef>
				<spawnPosition>
					<add>
						<aimtarget/>
						<vector3>(-2,0,0)</vector3>
					</add>
				</spawnPosition>
				<spawnDef>Wall</spawnDef>
				<stuffDef>WoodLog</stuffDef>
			</spawndef>
		</fire>
		<repeatVerb>false</repeatVerb>
		<cooldownTicks>50</cooldownTicks>
		<label>Raise Wall A</label>
		<description>Raise a wall!</description>
		<icon>Things/Item/Equipment/WeaponRanged/MachinePistol</icon>
		<verbProps>
			<verbClass>VerbScript.Verb_Scripted</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<warmupTime>0.5</warmupTime>
			<range>19.9</range>
			<soundCast>Shot_MachinePistol</soundCast>
			<soundCastTail>GunTail_Light</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</verbProps>
	</verbData>
  </VerbScript.VerbScriptDef>
  
